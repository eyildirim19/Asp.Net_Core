@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kaydet</title>
</head>
<body> 
    <!--form => -->
    <!--
        strandart html'de;
    action=actinpath-->
    <form action="KUllanici/Kaydet">
    </form>
    <!--
        asp-action ve asp-controller attributeler asp.net core ile gelen tag helper attributelerdir..
    -->
    <form asp-action="Kaydet" asp-controller="Kullanici">
        <!--Not : inputların name attriubtesi server'dan input'ın değerini yakalamak için kullanılır
            text input => text veri girmek için
            password input => şifreli veri girmek için
            submit input => formu server'a göndermek için....
        -->
        <input type="text" name="KullaniciAdi"  />
        <br />
        <input type="password" name="Sifre" />
        <br />
        <input type="submit" value="Kaydet" />
    </form>
</body>
</html>